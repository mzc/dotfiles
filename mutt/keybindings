# -*- mode: Muttrc; -*-

# index
bind index \Cn       next-thread
bind index \Cp       previous-thread

bind index \Cv       next-page
bind index <esc>v    previous-page
bind index <esc><    first-entry
bind index <esc>>    last-entry

bind index Y         imap-fetch-mail

# pager
bind pager \Cn       next-line
bind pager \Cp       previous-line

bind pager \Cv       next-page
bind pager <esc>v    previous-page
bind pager <esc><    top
bind pager <esc>>    bottom

# browser
bind browser \Cv     next-page
bind browser <esc>v  previous-page
bind browser <esc><  first-entry
bind browser <esc>>  last-entry
